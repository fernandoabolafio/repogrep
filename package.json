{
  "name": "repogrep",
  "version": "0.1.2",
  "description": "Local CLI tool for indexing and searching code repositories with full-text and semantic search.",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "repogrep": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsx src/cli.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "search",
    "cli",
    "code-search",
    "semantic-search",
    "fts",
    "full-text-search",
    "lancedb",
    "embeddings",
    "vector-search",
    "sqlite",
    "local",
    "offline"
  ],
  "author": "Fernando Abolafio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandoabolafio/repogrep.git"
  },
  "bugs": {
    "url": "https://github.com/fernandoabolafio/repogrep/issues"
  },
  "homepage": "https://github.com/fernandoabolafio/repogrep#readme",
  "files": [
    "dist",
    "readme.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.4.0",
    "@xenova/transformers": "^2.10.0",
    "better-sqlite3": "^12.4.1",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
